@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="Post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input class="form-control" type="text" id="id" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" id="Name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">DisplayName</label>
            <input class="form-control" type="text" id="displayName" asp-for="DisplayName" />
        </div>
        <div>
            <button class="btn btn-dark" type="submit">Update</button>
            <button class="btn btn-danger ms-2" type="submit" asp-area=""
            asp-controller="AdminTags"
            asp-action="Delete">Delete</button> 
        </div>
    </form>
</div>